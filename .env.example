# RecDesk AI Backend - Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/recdesk?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# AWS S3 (File Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=recdesk-cvs

# Redis (Caching & Queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI (AI Services)
OPENAI_API_KEY=your-openai-api-key

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@recdesk.io

# Gmail OAuth (Email Integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/integrations/gmail/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3001

# Encryption Key (for OAuth tokens)
ENCRYPTION_KEY=your-32-character-encryption-key!
